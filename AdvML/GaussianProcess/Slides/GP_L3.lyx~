\begin_deeper
\begin_layout Itemize

\series bold
\color blue
Heteroscedastic GP regression
\series default
\color inherit

\begin_inset Formula 
\[
y=f(x)+\exp\left[g(x)\right]\epsilon
\]

\end_inset

so where 
\begin_inset Formula $f\sim GP\left[m_{f}(x),k_{f}(x,x^{'})\right]$
\end_inset

 independently of 
\begin_inset Formula $g\sim GP\left[m_{g}(x),k_{g}(x,x^{'})\right]$
\end_inset

.
\end_layout

\begin_layout Itemize
GP for 
\series bold
\color blue
density estimation
\series default
\color inherit

\begin_inset Formula 
\[
p(x)=\frac{\exp\left[f(x)\right]}{\int_{\mathbb{R}}\exp\left[f(t)\right]dt}
\]

\end_inset

where 
\begin_inset Formula $f\sim GP\left[m(x),k(x,x^{'})\right]$
\end_inset

.
 Appealing mean function: 
\begin_inset Formula $m(x)=-\frac{1}{2\theta_{2}}(x-\theta_{1})^{2}$
\end_inset

 [i.e.
 best guess is a normal density].
\end_layout

\begin_layout Itemize

\series bold
\color blue
Shared latent GP
\series default
\color inherit
 for 
\series bold
dependent multivariate data
\series default
 (
\begin_inset Formula $k\ll p$
\end_inset

)
\begin_inset Formula 
\[
\left(\begin{array}{c}
y_{1}(\mathbf{x})\\
\vdots\\
y_{p}(\mathbf{x})
\end{array}\right)=\underset{p\times k}{\mathbf{L}}\left(\begin{array}{c}
f_{1}(\mathbf{x})\\
\vdots\\
f_{k}(\mathbf{x})
\end{array}\right)+\left(\begin{array}{c}
g_{1}(\mathbf{x})\\
\vdots\\
g_{p}(\mathbf{x})
\end{array}\right)+\left(\begin{array}{c}
\epsilon_{1}\\
\vdots\\
\epsilon_{p}
\end{array}\right)
\]

\end_inset


\end_layout

\end_deeper
